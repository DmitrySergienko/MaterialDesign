<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#131212</item>
        <item name="colorAccent">#9C8684</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyle</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
        <!-- <item name="chipStyle">@style/myUniqueStyle</item>-->
        <item name="textInputFilledStyle">@font/playball</item>
        <item name="tabStyle">colorPrimary</item>
>
    </style>


//unique style for FAB
    <style name="myFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
            <item name="backgroundTint">#5879F3</item>
    </style>

//unique style for BottomAppBar
    <style name="myBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/purple_700</item>
    </style>

    <style name="myUniqueStyle" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>

    </style>
    
    <style name="MyChipDesign" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="shapeAppearanceOverlay">@style/myUniqueStyle</item>
    </style>

    <style name="myTabStyle" parent="Widget.MaterialComponents.TabLayout">

    </style>



//-----MyTheme Blue

    <style name="MyBlueOriginalTheme" parent="Theme.MaterialDesign">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/light_blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">#ef9a9a</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyle</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
        <item name="textInputFilledStyle">@font/belleza</item>
    </style>


</resources>